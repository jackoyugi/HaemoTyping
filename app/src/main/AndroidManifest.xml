<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.ke.biofit.haemotyping">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.CollectedSampleActivity"
            android:label="@string/title_activity_collectedsample">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.ke.biofit.haemotyping.activity.MainActivity">
            </meta-data>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragment.DetailActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.ke.biofit.haemotyping.activity.MainActivity" />
        </activity>
    </application>

</manifest>